<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_record"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_image_view_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp">

            <ImageView
                android:layout_width="80dp"
                android:id="@+id/image_view_record"
                android:layout_height="80dp"
                android:contentDescription="@string/song"
                tools:src="@drawable/ic_launcher_background" />
        </androidx.cardview.widget.CardView>


        <TextView

            android:id="@+id/text_view_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_view_image_view_record"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/card_view_image_view_record"
            tools:text="SONGNAME"
            android:textSize="14sp" />

        <TextView
            android:layout_marginTop="6dp"
            android:id="@+id/text_view_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_song_name"
            android:layout_alignBottom="@id/card_view_image_view_record"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/card_view_image_view_record"

            tools:text="Artist"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_view_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            tools:text="PRICE"
            android:textSize="14sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
